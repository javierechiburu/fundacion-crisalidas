---
interface Props {
  title: string;
  body: string;
  url: string;
  className?: string;
}

const { title, body, className } = Astro.props;
---

<div class={`clip-path relative ${className} max-w-64 w-full`}>
  <svg viewBox="0 -0.5 32 32" fill="none" class="w-44 mx-auto">
    <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"
    ></g>
    <g id="SVGRepo_iconCarrier">
      <path
        d="M16.0005 0L21.4392 9.27275L32.0005 11.5439L24.8005 19.5459L25.889 30.2222L16.0005 25.895L6.11194 30.2222L7.20049 19.5459L0.000488281 11.5439L10.5618 9.27275L16.0005 0Z"
        fill="#FFCB45"></path>
    </g>
  </svg>

  <!-- Contenido centrado sobre la estrella -->
  <div
    class="absolute inset-0 flex items-center justify-center text-center px-4"
  >
    <div>
      <h3 class="text-base font-semibold text-white mb-2">{title}</h3>
    </div>
  </div>
</div>
