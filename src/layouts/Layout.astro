---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div id="app" class="relative min-h-screen">
      <Header />
      <main
        class="[grid-area:main] bg-gradient-to-b from-purple-600 to-fuchsia-500"
      >
        <slot />
      </main>
      <footer class="[grid-area:footer] min-h-screen bg-gray-800">
        FOOTER
      </footer>
    </div>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Montserrat";
    src: url("/fonts/Montserrat-VariableFont_wght.ttf") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "SourGummy";
    src: url("/fonts/SourGummy-VariableFont_wdth,wght.ttf") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  html {
    font-family: SourGummy, system-ui, sans-serif;
    background: #9333ea;
  }

  #app {
    display: grid;
    grid-template-areas: "header" "main" "footer";
    grid-template-columns: 1fr;
    grid-template-rows: 70px 1fr auto;
  }

  .appear-section {
    opacity: 0;
    scale: 0;
    animation: appear linear both;
    animation-timeline: view();
    animation-range: entry 0;
  }

  @keyframes appear {
    to {
      opacity: 1;
      scale: 1;
    }
  }
</style>
